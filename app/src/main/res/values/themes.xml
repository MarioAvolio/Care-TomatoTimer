<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CareTomatoTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/firstColor</item>

        <!--        text color-->
        <item name="android:textColor">@color/thirdColor</item>
        <item name="colorAccent">@color/firstColor</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.CareTomatoTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CareTomatoTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CareTomatoTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>