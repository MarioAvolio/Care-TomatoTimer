<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="15dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/work_time"
        android:textColor="@color/secondColor" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:isb_indicator_color="@color/firstColor"
        app:isb_indicator_text_color="@color/fourthColor"
        app:isb_indicator_text_size="18sp"
        app:isb_max="60"
        app:isb_min="1"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/thirdColor"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_color="@color/secondColor"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/thirdColor"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/thirdColor"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/firstColor"
        app:isb_track_progress_size="4dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/break_time"
        android:textColor="@color/secondColor" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/break_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:isb_indicator_color="@color/firstColor"
        app:isb_indicator_text_color="@color/fourthColor"
        app:isb_indicator_text_size="18sp"
        app:isb_max="10"
        app:isb_min="1"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="5"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/thirdColor"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_color="@color/secondColor"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/thirdColor"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/thirdColor"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/firstColor"
        app:isb_track_progress_size="4dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/long_break_time"
        android:textColor="@color/secondColor" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/long_break_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:isb_indicator_color="@color/firstColor"
        app:isb_indicator_text_color="@color/fourthColor"
        app:isb_indicator_text_size="18sp"
        app:isb_max="30"
        app:isb_min="1"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="15"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/thirdColor"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_color="@color/secondColor"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/thirdColor"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/thirdColor"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/firstColor"
        app:isb_track_progress_size="4dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/works_before_a_long_break"
        android:textColor="@color/secondColor" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/works_before_a_long_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:isb_indicator_color="@color/firstColor"
        app:isb_indicator_text_color="@color/fourthColor"
        app:isb_indicator_text_size="18sp"
        app:isb_max="8"
        app:isb_min="2"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="4"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/thirdColor"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_color="@color/secondColor"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/thirdColor"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/thirdColor"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/firstColor"
        app:isb_track_progress_size="4dp" />


</LinearLayout>